root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false
max_line_length = 90
tab_width = 2

[{*.ats,*.cts,*.mts,*.ts}]
ij_typescript_force_quote_style = true
ij_typescript_use_double_quotes = false
trim_trailing_whitespace = true
ij_typescript_spaces_within_object_literal_braces = true
